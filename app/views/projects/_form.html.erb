<%= form_for(@project) do |f| %>
  <%#= f.error_notification %>
  <div class="row">
    <div class="col-sm-4">
     <div class="field form-group">
      <div class="control">
           <%= f.label  :project_name %>
        <%= f.text_field :project_name, class: "input form-control" %>
      </div>
     </div>
     <div class="field form-group">
      <div class="control">
           <%= f.label  :project_description %>
        <%= f.text_field :project_description, class: "input form-control" %>
      </div>
     </div>
     <div class="field form-group">
      <div class="control">
        <%= f.submit :submit, class: "button is-link btn btn-info" %>
      </div>
     </div>
    </div>
  </div>

<% end %>
