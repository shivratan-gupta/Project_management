<%= form_with(model: [ @project, @task.new_record? ? @project.tasks.build : @task ], local: true) do |f|  %>
  <%#= f.error_notification %>
  <div class="row">
    <div class="col-sm-4">
      <div class="field form-group">
        <div class="control">
          <%= f.label  :task_name %>
          <%= f.text_field :task_name, class: "input form-control" %>
        </div>
      </div>
      <div class="field form-group">
        <div class="control">
          <%= f.label  :task_description %>
          <%= f.text_field :task_description, class: "input form-control" %>
        </div>
      </div>
      <div class="field form-group">
        <div class="control">
          <%= f.submit :submit, class: "button is-link btn btn-info" %>
        </div>
      </div>
    </div>
  </div>

<% end %>