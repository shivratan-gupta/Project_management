<section class="section">
	<div class="container">
		<div class="columns is-centered">
			<div class="column is-9">
				<h1 class="title is-2"><%= @task.task_name %></h1>
				<%= render 'form', task: @task, project: @project %>
				<div class="level">
					
					<div class="level-right">
						<div class="buttons">
							<%= link_to 'Edit Task', edit_project_task_path(@project, @task), class:'button' %> |
							<%= link_to 'Delete Task', project_task_path(@project, @task), method: :delete, data: { confirm: 'Are you sure'}, class:'button is-danger is-outlined' %> 
						</div>
					</div>
					<%= link_to '<--Back', project_tasks_path, class:'button btn btn-link' %>
				</div>
				<hr />
				<div class="content">
					<%#= @fascility.description.html_safe %>
				</div>
			</div>
		</div>
	</div>
</section>
